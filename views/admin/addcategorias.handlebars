{{#each erros}}
	<div class='alert alert-danger'>{{texto}}</div>
{{else}}
{{/each}}

<h3>Nova cagegoria:</h3>
<div class='card'>
	<div class='card-body'>
		<form action='/admin/categorias/nova' method='post'>
			<label for='nome'>Nome: </label>
			<input
				type='text'
				name='nome'
				id='nome'
				class='form-control'
				placeholder='Nome da categoria'
			/>
			<label for='slug'>Slug: </label>
			<input
				type='text'
				name='slug'
				id='slug'
				class='form-control'
				placeholder='Slug da categoria'
			/>
			<button type='submit' class='btn btn-success' style='margin-top:15px'>Criar
				categoria</button>
		</form>
	</div>
</div>