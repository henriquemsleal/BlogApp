<h2>Lista de Categorias: </h2>
<hr />
<a href='/admin/categorias/add'>
	<button class='btn btn-success'>Nova categoria</button>
</a>

{{#each categorias}}
	<div class='card mt-2'>
		<div class='card-body'>
			<h4> {{nome}} </h4>
			<small>Slug: {{slug}} </small><br />
			<small>Data: {{#formatDate date}}{{/formatDate}} </small><br />
			<div class='d-flex justify-content-start w-25'>
				<div class='w-50'>
					<a href='/admin/categorias/edit/{{_id}}'>
						<button class='btn btn-success'>Editar</button>
					</a>
				</div>
				<div class='w-50'>
					<form action='/admin/categorias/deletar' method='post'>
						<input type='hidden' name='id' value='{{_id}}' />
						<button type='submit' class='btn btn-danger'>Deletar</button>
					</form>
				</div>
			</div>
		</div>
	</div>
{{else}}
	<h4 class='mt-3'>Nenhuma categoria registrada!</h4>
{{/each}}