<h2>Lista de Postagens: </h2><hr />
<a href='/admin/postagens/add'>
	<button class='btn btn-success mb-4'>Nova postagem</button>
</a>

{{#each postagens}}
	<div class='card'>
		<div class='card-body'>
			<h3>{{titulo}}</h3>
			<small>{{#formatDate date}}{{/formatDate}}</small>
			<h4 class='mt-4'>{{descricao}}</h4>
			<h4>{{conteudo}}</h4>
			<div class='mb-2'>
				<small>Categoria: {{categoria.nome}}</small>
			</div>
			<div class='d-flex justify-content-start w-25'>
				<div class='w-50'>
					<a href='/admin/postagens/edit/{{_id}}'>
						<button class='btn btn-success'>Editar</button>
					</a>
				</div>
				<div class='w-50'>
					<form action='/admin/postagens/deletar' method='post'>
						<input type='hidden' name='id' value='{{_id}}' />
						<button type='submit' class='btn btn-danger'>Deletar</button>
					</form>
				</div>
			</div>
		</div>
	</div>
{{else}}
	<h4 class='mt-1'>Nenhuma postagem registrada!</h4>
{{/each}}